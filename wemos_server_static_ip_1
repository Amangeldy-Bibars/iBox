//BB 09.02.
#include <ESP8266WiFi.h>
#include <ESP8266HTTPClient.h>
#include <Servo.h>
const char* ssid = "FLATRON"; //wifi login
const char* password = "1234567890123"; //wifi parol
WiFiServer server(80);
Servo servo;

void setup() 
{
  Serial.begin(115200);
  delay(10);
  servo.attach(D10); 
  servo.write(0); 
  Serial.print("Connecting to ");
  Serial.println(ssid);
  
  IPAddress ip(192, 168, 43, 57); //static ip 
  IPAddress gateway(192, 168, 1, 1);
  IPAddress subnet(255, 255, 255, 0);
  IPAddress dns(192, 168, 1, 1);
 
  WiFi.config(ip, gateway, subnet);
  
  WiFi.begin(ssid, password);
 
  while (WiFi.status() != WL_CONNECTED) 
  {
    delay(500);
    Serial.print(".");
  }
  Serial.println("");
  Serial.println("WiFi connected");
 
  
  server.begin();
  Serial.println("Server started");
 


  Serial.print("Use this URL : ");
  Serial.print("http://");
  Serial.print(WiFi.localIP());
  Serial.println("/");
 
}
 
void loop() 
{
  WiFiClient client = server.available();
  if (!client) {
    return;
  }
 
  Serial.println("new client");
  while(!client.available()){
    delay(1);
  }
 
  String request = client.readStringUntil('\r');
  Serial.println(request);
  client.flush();
 
 
  int value = LOW;
  if (request.indexOf("/LED=ON") != -1) {
    delay(1);
    servo.write(90);
    delay(1);
    value = HIGH;
  }
  if (request.indexOf("/LED=OFF") != -1){
    delay(1);
    servo.write(0);
    delay(1);
    value = LOW;
  }
 
 

  client.println("HTTP/1.1 200 OK");
  client.println("Content-Type: text/html");
  client.println(""); //  do not forget this one
  client.println("<!DOCTYPE HTML>");
  client.println("<html>");
 
  client.print("Servo mani : ");
 
  if(value == HIGH) {
    client.print("On");  
  } else {
    client.print("Off");
  }
  client.println("<br><br>");
  client.println("Servo <a href=\"/LED=ON\">ON</a> <br>");
  client.println("Servo <a href=\"/LED=OFF\">OFF</a> <br>");
  client.println("</html>");
 
  delay(1);
  Serial.println("Client disconnected");
  Serial.println("");
 
}
