DeviceAddress sensor9 = {0x28, 0x24, 0xCE, 0x77, 0x91, 0x9, 0x2, 0x57};
DeviceAddress sensor10 = {0x28, 0xCA, 0x6E, 0x77, 0x91, 0x10, 0x2, 0x0};

byte value[40];
int buf[32];
char ch[8];
int address = 8;

void I2C_p()
{
            Serial.print("\n I2C start.");
            Wire.beginTransmission(address); 
            Wire.write(value, 40);
            Wire.endTransmission();
            Serial.print("\n I2C finish.");
}
void ToI(int x2)
{
    int i,d = 1, k=0, exp2=0; 
    int t[30]; 
    double x, drob, n, y, z; 
    x=x2; 
    int cel = (int)x; 
    while(cel) 
    { 
    t[k] = cel%2; 
    k++; 
    cel /= 2; 
    } 
    drob = modf(x, &n); 
    int a[23]; 
    for(i = 0; i < 23; i++) 
    { 
    drob *= 2; 
    y = modf(drob, &z); 
    a[i] = (int)z; 
    if(drob >= 1) 
    drob = drob - 1; 
    } 
    /* 
    for(i=0; i<k; i++) 
    Serial.print(t[i]); 
    */ 
    //---------------------— 
    exp2=k-1+127; 
    cel = (int)exp2; 
    int t2[10], k3=0; 
    d=1; 
    while(cel) 
    { 
    t2[k3]= cel%2; 
    k3++; 
    cel /= 2; 
    } 
    int g=0; 
    if(x>=0) 
    {
      buf[g]=0;
      g++;
    }
    else 
    {
      buf[g]=1; 
      g++;
    }
    for(i=7; i>=0; i--) { buf[g]=t2[i]; g++; } 
    for(i=k-2; i>=0; i--) { buf[g]=t[i]; g++; } 
    for(i = 0; i < 24-k; i++) { buf[g]=a[i]; g++; } 
}



void get_s(int a, int b)
{
  WiFiClient client;
   if (client.connect(host, 80))
              { 
                  Serial.print("\n G  "+String(b)+":\n");
                  Serial.println(a);                     
                  Serial.println("GET start.");
                  client.println("GET /FPGAdev/api/Values/sendDatas?value="+String(a)+"&type="+String(b)+"&device=9 HTTP/1.1");
                  client.println("Host: 95.161.225.76");
                  client.println("User-Agent: arduino-ethernet");
                  client.println("Connection: close");
                  client.println();
                  Serial.println("GET end.");
                  client.stop();                 
                  Serial.println("\n[Disconnected]\n\n");                  
               }                  
              else
               {
                Serial.println("connection failed!]\n\n");
                client.stop();                
                }
}

long bin_to_dec (char *s)
{
   short i;
   long res = 0;
   
   for ( i = 0 ; i < sizeof (long) * 8 && s[i] ; ++i )
   {
      res <<= 1;
      res |= (s[i] - '0');
   }
   return res;
} 

void to_value(int i1, int i2, int v)
{
  int i, j=0;
            for( i=i1; i<i2; i++)
            {
              ch[j]=buf[i]+48;
              j++;
             }
             value[v]=bin_to_dec(ch);
             
}

  void setup()
  {
      Serial.begin(115200);
      delay(100);
      Wire.begin();
      dht.begin();
      ds.begin();
      delay(100);
      Serial.println();
      Serial.println();
      Serial.print("Connecting to ");
      Serial.println(ssid);
      
      WiFi.mode(WIFI_STA);
      WiFi.begin(ssid, password);
      
      while (WiFi.status() != WL_CONNECTED)
      {
        delay(500);
        Serial.print(".");
      }
      Serial.println("");
      Serial.println("WiFi connected");  
      Serial.println("IP address: ");
      Serial.println(WiFi.localIP());
  }  
  
  void loop() 
