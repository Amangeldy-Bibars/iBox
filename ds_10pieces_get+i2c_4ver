OneWire oneWire(D7);
DallasTemperature ds(&oneWire);

DeviceAddress sensor1 = {0x28, 0xD7, 0x25, 0x77, 0x91, 0x4, 0x2, 0x5F};
DeviceAddress sensor2 = {0x28, 0xA3, 0xDD, 0x77, 0x91, 0x9, 0x2, 0xA};
